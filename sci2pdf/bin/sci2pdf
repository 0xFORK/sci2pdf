#!/usr/bib/env python
from __future__ import print_function
import sys
import bibtexparser
import argparse
import textwrap
from sci2pdf.libgen import download_pdf_from_bibs, download_from_doi
from sci2pdf.libgen import download_from_title


def main():
    parser = argparse.ArgumentParser(
        prog="sci2pdf",
        formatter_class=argparse.RawDescriptionHelpFormatter,
        description=textwrap.dedent('''\

        $ sci2bib -i input.bib
       -----------------------------------------------------
            @author: Bruno Messias
            @email: messias.physics@gmail.com
            @telegram: @brunomessias
            @github: https://github.com/bibcure/sci2bib
        ''')
    )
    parser.add_argument(
        "--input", "-i",
        required=True,
        type=argparse.FileType("r"),
        help="bibtex input file"
    )
    parser.add_argument("--title", "-t",
                        dest="title",
                        action="store_true",
                        help="download from title"
                        )


    parser.set_defaults(title=False)

    args = parser.parse_known_args()
    title_search = args[0].title
    inline_search = len(args[1]) > 0
    if inline_search:
        value = " ".join(args[1])
        if title_search:
            download_from_title(value)
        else:
            download_from_doi(value)
    else:
        bibtex = bibtexparser.loads(args.input.read())
        bibs = bibtex.entries
        if len(bibs) == 0:
            print("Input File is empty or corrupted.")
            sys.exit(1)

        download_pdf_from_bibs(bibs)



if __name__ == "__main__":
    main()
